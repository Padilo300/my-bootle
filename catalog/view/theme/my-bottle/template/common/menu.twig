{% if categories %}
  <section class="PadiloNav container">
    <div class="row">
        <div class="col col-12">
            <nav>
                <svg class="ham mobilBar hamRotate ham1" viewBox="0 0 100 100" width="80" onclick="this.classList.toggle('active')">
                    <path class="line top"
                            d="m 30,33 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40" />
                    <path class="line middle"
                            d="m 30,50 h 40" />
                    <path class="line bottom"
                            d="m 30,67 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40" />
                </svg>
                <ul id="nav">
                  <li>
                    <a href="/">
                      {{ mainPage }}
                    </a>
                  </li>
                  {% for category in categories %}
                    {% if category.children %}
                      <li class="triigerSubMenu">
                        <a href="{{ category.href }}" class="dropdown-toggle" data-toggle="dropdown">
                          {{ category.name }}
                        </a>
                        <div class="subMenu">
                            <ul>
                                {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
                                  {% for child in children %}
                                      <li>
                                        <ul class="subCategory">
                                        <li><a href="{{ child.href }}">{{ child.name }}</a></li>
                                        {% if child.gchildren %}
                                          {% for gchild in child.gchildren %}
                                            <li><a class="gchild" href="{{ gchild.href }}">{{ gchild.name }}</a></li>
                                          {% endfor %}
                                        {% else %}
                                        {% endif %}
                                      </ul>
                                    </li>
                                  {% endfor %}
                                {% endfor %}
                            </ul>
                            <a href="/" class="allProduct">
                                vse producty <i class="fa fa-caret-right" aria-hidden="true"></i>
                            </a>
                        </div>{# end subMenu #}
                      </li>
                    {% else %}
                    <li>
                      <a href="{{ category.href }}">
                        {{ category.name }}
                      </a>
                    </li>
                  {% endif %}
                  {% endfor %}
            </nav>
        </div>
    </div>
  </section>
{% endif %} 